{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/**.lock": true
    },
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/dist/css"
        }        
    ],
    "prettier.tabWidth": 4,
    "editor.detectIndentation": false,
    "workbench.tree.indent": 14,
}